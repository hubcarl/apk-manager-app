<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list_item"
              android:background="@color/background_grey"
              android:orientation="vertical">
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sky_item_click_selector"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:orientation="horizontal">
            <FrameLayout android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:id="@+id/frame_app_icon"
                         android:layout_alignParentLeft="true">
                <ImageView
                        android:id="@+id/app_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY" />
                <TextView
                        android:id="@+id/app_status"
                        android:layout_width="fill_parent"
                        android:layout_height="14dp"
                        android:layout_marginTop="46dp"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:background="@color/light_gray"
                        android:textColor="@color/sky_green"
                        android:visibility="gone"
                        android:text="已安装">
                </TextView>
            </FrameLayout>

            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_toRightOf="@+id/frame_app_icon"
                          android:layout_marginRight="60dp"
                          android:layout_marginLeft="12dp"
                          android:orientation="vertical">
                <TextView
                        android:id="@+id/app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="16sp"
                        android:textColor="@color/title"
                        android:text="">
                </TextView>
                <TextView
                        android:id="@+id/app_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="@color/light_more_gray"
                        android:text="">
                </TextView>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingBottom="2dp"
                              android:orientation="horizontal">
                    <TextView
                            android:id="@+id/app_size"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/light_more_gray"
                            android:text="大小:">
                    </TextView>
                    <TextView
                            android:id="@+id/app_version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:maxWidth="150dp"
                            android:layout_marginLeft="12dp"
                            android:textColor="@color/light_more_gray"
                            android:text="版本:">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    style="@style/btn_play_blue_bg"
                    android:text="卸载"
                    android:id="@+id/btn_opt" />
        </RelativeLayout>
</LinearLayout>